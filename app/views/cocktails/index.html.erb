<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.ytimg.com/vi/4FOghJzXuYg/maxresdefault.jpg);">
  <div class="container">
    <h1>Boozmania</h1>
    <%= link_to 'Create a cocktail', new_cocktail_path, class:"btn btn-primary rounded-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <%@cocktails.each do |cocktail|%>
      <div class="card-product">
        <% if cocktail.img_url %>
          <img src=<%=cocktail.img_url%> class="cocktail-img">
        <%else %>
          <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill, class:"cocktail-img"%>
        <%end%>
        <div class="card-product-infos">
          <h2><%=cocktail.name%></h2>
          <%= link_to 'Booze me !', cocktail_path(cocktail), class:"btn btn-warning" %>
          <%= link_to 'Delete', cocktail_path(cocktail), method: :delete, class:"btn btn-warning", data: { confirm: "Are you sure?" }  %>
            <%# <i class="fa fa-trash"></i> %>
          
        </div>
      </div>
    <%end%>
  </div>
</div>

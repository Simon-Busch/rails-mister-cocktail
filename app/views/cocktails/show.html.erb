<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.ytimg.com/vi/4FOghJzXuYg/maxresdefault.jpg);">
  <div class="container">
    <h1>Welcome to <strong>Mister cocktails</strong></h1>
    <p>Find your cocktail</p>
  </div>
</div>
<div class="btn-back">
  <%= link_to 'Back to main page', cocktails_path, class:"btn btn-danger" %>
</div>
<div class="cocktail">
  <img src='https://www.destinationcocktails.fr/wp-content/uploads/2019/11/cocktails_fumants-e1541424344388.jpg' class="cocktail-img">
  <h2><%= @cocktail.name %></h2>
  <p>Composition</p>
  <ul>
    <% @cocktail.doses.each do |dose|%>
      <li><%="#{dose.description} || #{dose.ingredient.name}"%>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash"></i>
      <% end %>
    <%end%>
  </ul>
</div>

<div class="container cocktail">
  <%= simple_form_for [@cocktail, @dose] do |f|%>
    <%=f.association :ingredient %>
    <%=f.input :description%>
    <%=f.submit  "Add an ingredient", class:"btn btn-primary rounded-lg"%>
  <% end %>
</div>  
